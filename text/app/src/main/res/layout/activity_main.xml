<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="20dp">

    <Button
        android:id="@+id/searchview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="searchview"/>

    <Button
        android:id="@+id/recycleview_adapter_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="recycleview_adapter_animation"/>

    <Button
        android:id="@+id/recycleview_itemtouchhelper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="recycleview_itemtouchhelper"/>

    <Button
        android:id="@+id/canvas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="canvas"/>

    <Button
        android:id="@+id/imageloader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="imageloader"/>

    <Button
        android:id="@+id/likeanimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="likeanimation"/>

    <Button
        android:id="@+id/annotationProcessing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AnnotationProcessing"/>

    <Button
        android:id="@+id/btn_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="calendar"/>

    <Button
        android:id="@+id/btn_bezier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="BezierClick"
        android:text="Bezier"/>

</LinearLayout>
